<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.humbert.powerbuilding.IntroduceWorkout">

    <TextView
        android:id="@+id/text_train"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/days"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="76dp" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/radioGroup"
        app:layout_constraintTop_toTopOf="@+id/text_train"
        android:layout_marginTop="41dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp">

    </RadioGroup>

    <TextView
        android:id="@+id/text_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start"
        tools:layout_editor_absoluteY="159dp"
        tools:layout_editor_absoluteX="142dp" />

    <CalendarView
        android:id="@+id/calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="18dp"
        android:layout_marginTop="37dp"
        app:layout_constraintTop_toBottomOf="@+id/text_start" />

    <LinearLayout
        android:layout_width="352dp"
        android:layout_height="593dp"
        android:layout_weight="1"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="-37dp"
        android:layout_marginBottom="8dp">

        <ToggleButton
            android:id="@+id/tbtn_monday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Monday" />

        <ToggleButton
            android:id="@+id/tbtn_tuesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tuesday" />

        <ToggleButton
            android:id="@+id/tbtn_wednesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Wednesday" />

        <ToggleButton
            android:id="@+id/tbtn_thursday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Thursday" />

        <ToggleButton
            android:id="@+id/tbtn_friday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Friday" />

        <ToggleButton
            android:id="@+id/tbtn_saturday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Saturday" />

        <ToggleButton
            android:id="@+id/tbtn_sunday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sunday" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
